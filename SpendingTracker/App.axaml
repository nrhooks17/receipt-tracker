<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SpendingTracker.App"
             RequestedThemeVariant="Dark">
    <Application.Styles>
        <FluentTheme />

        <Style Selector="Window">
            <Setter Property="Background" Value="#282c34"/>
            <Setter Property="Foreground" Value="#abb2bf"/>
        </Style>

        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#9da5b3"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="#21252b"/>
            <Setter Property="BorderBrush" Value="#3a3f4b"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="#61afef"/>
            <Setter Property="Foreground" Value="#282c34"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#e06c75"/>
        </Style>

        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#7ac0f4"/>
        </Style>
        
        <Style Selector="Button.danger:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#ea8089"/>
        </Style>

        <Style Selector="Border.card">
            <Setter Property="Background" Value="#21252b"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Application.Styles>
</Application>
